[ loop_range.imp - zakresy petli 
    
    OUTPUT:
        > 10000
        > 10000
        > 10000
]
DECLARE
	a, b, c
BEGIN
	a := 10000;
	b := 0;
	c := 100;
	FOR i FROM a TO b DO
		a := a + c;
	ENDFOR
	WRITE a;
	
	FOR i FROM b DOWNTO a DO
		a := a + c;
	ENDFOR
	WRITE a;
	
	WHILE a < b DO
		a := a + c;
	ENDWHILE
	WRITE a;
END

